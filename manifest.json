{
    "id": "nextcloud",
    "name": "Nextcloud",
    "packaging_format": 1,
    "description": {
        "en": "Online storage, file sharing platform and various other applications",
        "fr": "Stockage en ligne, plateforme de partage de fichiers et diverses autres applications"
    },
    "version": "21.0.1~ynh1",
    "url": "https://nextcloud.com",
    "license": "AGPL-3.0",
    "maintainer": {
        "name": "Kay0u",
        "email": "pierre@kayou.io"
    },
    "requirements": {
        "yunohost": ">= 4.1.6"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/nextcloud",
                "default": "/nextcloud"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "homer"
            },
            {
                "name": "user_home",
                "type": "boolean",
                "ask": {
                    "en": "Access the users home folder from Nextcloud?",
                    "fr": "Acc√©der au dossier personnel des utilisateurs depuis Nextcloud ?"
                },
                "default": false
            }
        ]
    }
}
